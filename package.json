{
  "name": "angular-patterns-generator",
  "displayName": "Angular Patterns Generator",
  "description": "Generate Angular components, services, and modules with multiple architecture patterns such as MVP, Clean Architecture, Standalone Components, and more. Enhance your development workflow by scaffolding consistent, scalable structures directly from VS Code.",
  "version": "1.0.3",
  "publisher": "joantz",
  "author": {
    "name": "Joan Torres"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/joantorres/angular-patterns-generator.git"
  },
  "homepage": "https://github.com/joantorres/angular-patterns-generator#readme",
  "bugs": {
    "url": "https://github.com/joantorres/angular-patterns-generator/issues"
  },
  "keywords": [
    "angular",
    "generator",
    "patterns",
    "mvp",
    "clean-architecture",
    "standalone",
    "typescript",
    "scaffolding"
  ],
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "icon": "icon.png",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "angularPatterns.generateComponent",
        "title": "Generate Angular Component with Pattern"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "angularPatterns.generateComponent",
          "group": "2_angular",
          "when": "explorerResourceIsFolder"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
